@model IEnumerable<FoodWeb.Models.Order>

@{
    ViewBag.Title = "My Orders";
    Layout = "~/Views/Shared/_Layout.cshtml"; // your main user layout
}

<div class="container mt-5">
    <h2 class="mb-4">My Confirmed Orders</h2>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Item Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Sub Total</th>
                        <th>Order Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.invoices.ID</td>
                            <td>@order.prodcts.ProductName</td>
                            <td>@order.Qty</td>
                            <td>@order.Unit_Price TK</td>
                            <td>@order.Order_Bill TK</td>
                            <td>@order.Order_Date?.ToString("dd-MMM-yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            You have no confirmed orders yet.
        </div>
    }
</div>
