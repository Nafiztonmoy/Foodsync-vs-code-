@model FoodWeb.Models.ResetPasswordModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container user-profile-card" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">
                        <i class="fa fa-shield-alt"></i> Reset Password
                    </h3>
                </div>
                
                @using (Html.BeginForm("ResetPassword", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Token)
                    @Html.HiddenFor(model => model.Email)
                    
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger" })
                        
                        <div class="alert alert-success">
                            <i class="fa fa-check-circle"></i>
                            <strong>Password Reset:</strong> Create a new secure password for your account: <strong>@Model.Email</strong>
                        </div>
                        
                        <div class="alert alert-warning">
                            <i class="fa fa-exclamation-triangle"></i>
                            <strong>Security Requirements:</strong> Your new password must contain at least 6 characters with uppercase, lowercase, number, and special character.
                        </div>
                        
                        <div class="form-group">
                            <label class="col-sm-4 control-label">
                                <i class="fa fa-lock"></i> New Password *
                            </label>
                            <div class="col-sm-8">
                                @Html.PasswordFor(model => model.NewPassword, new { 
                                    @class = "form-control", 
                                    @placeholder = "Enter your new password...",
                                    @required = "required",
                                    @minlength = "6"
                                })
                                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                <small class="text-muted">Must include uppercase, lowercase, number, and special character.</small>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-sm-4 control-label">
                                <i class="fa fa-lock"></i> Confirm Password *
                            </label>
                            <div class="col-sm-8">
                                @Html.PasswordFor(model => model.ConfirmNewPassword, new { 
                                    @class = "form-control", 
                                    @placeholder = "Confirm your new password...",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-sm-6">
                                <a href="@Url.Action("Login", "User")" class="btn btn-default btn-block">
                                    <i class="fa fa-arrow-left"></i> Cancel
                                </a>
                            </div>
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-success btn-block">
                                    <i class="fa fa-check"></i> Reset Password
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="text-center mt-3">
                <p class="text-muted">
                    <i class="fa fa-info-circle"></i>
                    After resetting your password, you'll be redirected to the login page.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .user-profile-card .card {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
    }
    
    .user-profile-card .card-header {
        border-radius: 10px 10px 0 0;
        border-bottom: none;
        padding: 20px;
    }
    
    .user-profile-card .card-body {
        padding: 30px;
    }
    
    .user-profile-card .card-footer {
        background-color: #f8f9fa;
        border-radius: 0 0 10px 10px;
        border-top: 1px solid #dee2e6;
        padding: 20px;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-control {
        border-radius: 5px;
        border: 1px solid #ddd;
        padding: 10px;
    }
    
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }
    
    .btn {
        border-radius: 5px;
        padding: 10px 20px;
        font-weight: 600;
    }
    
    .alert {
        border-radius: 5px;
        border: none;
    }
</style>