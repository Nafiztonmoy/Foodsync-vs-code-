@model FoodWeb.Models.ForgotPasswordModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container user-profile-card" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fa fa-key"></i> Forgot Password
                    </h3>
                </div>
                
                @using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger" })
                        
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle"></i>
                            <strong>Password Recovery:</strong> Enter your email address and we'll send you instructions to reset your password.
                        </div>
                        
                        <div class="form-group">
                            <label class="col-sm-4 control-label">
                                <i class="fa fa-envelope"></i> Email Address *
                            </label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.Email, new { 
                                    @class = "form-control", 
                                    @placeholder = "Enter your registered email address...",
                                    @required = "required",
                                    @type = "email"
                                })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                <small class="text-muted">We'll send reset instructions to this email address.</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-sm-6">
                                <a href="@Url.Action("Login", "User")" class="btn btn-default btn-block">
                                    <i class="fa fa-arrow-left"></i> Back to Login
                                </a>
                            </div>
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-primary btn-block">
                                    <i class="fa fa-paper-plane"></i> Send Reset Link
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="text-center mt-3">
                <p class="text-muted">
                    Remember your password? 
                    <a href="@Url.Action("Login", "User")" class="text-primary">
                        <strong>Sign In</strong>
                    </a>
                </p>
                <p class="text-muted">
                    Don't have an account? 
                    <a href="@Url.Action("Signup", "User")" class="text-primary">
                        <strong>Create Account</strong>
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .user-profile-card .card {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: none;
    }
    
    .user-profile-card .card-header {
        border-radius: 10px 10px 0 0;
        border-bottom: none;
        padding: 20px;
    }
    
    .user-profile-card .card-body {
        padding: 30px;
    }
    
    .user-profile-card .card-footer {
        background-color: #f8f9fa;
        border-radius: 0 0 10px 10px;
        border-top: 1px solid #dee2e6;
        padding: 20px;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-control {
        border-radius: 5px;
        border: 1px solid #ddd;
        padding: 10px;
    }
    
    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
    
    .btn {
        border-radius: 5px;
        padding: 10px 20px;
        font-weight: 600;
    }
    
    .alert {
        border-radius: 5px;
        border: none;
    }
</style>