@model IEnumerable<FoodWeb.Controllers.LeaderboardViewModel>
@{
    ViewBag.Title = "Achievements Leaderboard";
}

<div class="container mt-4">
    <h2>Achievements Leaderboard</h2>
    <p>See how you rank against other users based on achievements unlocked!</p>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Rank</th>
                            <th>User</th>
                            <th>Achievements Unlocked</th>
                            <th>Total Points</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rank = 1;
                            foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        @if (rank == 1)
                                        {
                                            <span class="badge bg-warning">🥇 #1</span>
                                        }
                                        else if (rank == 2)
                                        {
                                            <span class="badge bg-secondary">🥈 #2</span>
                                        }
                                        else if (rank == 3)
                                        {
                                            <span class="badge bg-danger">🥉 #3</span>
                                        }
                                        else
                                        {
                                            <span>#@rank</span>
                                        }
                                    </td>
                                    <td>@user.Username</td>
                                    <td>@user.AchievementCount</td>
                                    <td>
                                        <span class="badge bg-primary">@user.TotalPoints points</span>
                                    </td>
                                </tr>
                                rank++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Achievements
        </a>
        <a href="@Url.Action("MyAchievements")" class="btn btn-primary">
            <i class="fas fa-user"></i> View My Achievements
        </a>
    </div>
</div>