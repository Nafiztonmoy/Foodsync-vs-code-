@model IEnumerable<FoodWeb.Models.ReviewModel>

@{
    ViewBag.Title = "Review List";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Customer Reviews</h1>
    </section>

    <section class="content">
        <div class="box">
            <div class="box-body table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Rating</th>
                            <th>Comment</th>
                            <th>Image</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var review in Model)
                        {
                            <tr>
                                <td>@review.UserName</td>
                                <td>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= review.Rating)
                                        {
                                            <span style="color:gold">&#9733;</span>
                                        }
                                        else
                                        {
                                            <span style="color:#ccc">&#9733;</span>
                                        }
                                    }
                                </td>
                                <td>@review.Comment</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(review.ImagePath))
                                    {
                                        <img src="@Url.Content(review.ImagePath)" width="80" height="80" />
                                    }
                                </td>
                                <td>@review.CreatedAt.ToString("dd MMM yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
