﻿﻿﻿﻿﻿@model List<FoodWeb.Models.BlogModel>
@{
    ViewBag.Title = "Food Blog - FoodSync";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Custom CSS for Blog Page -->
<style>
    .blog-hero {
        background: linear-gradient(135deg, #6f4e37 0%, #4b2e1a 100%);
        color: white;
        padding: 60px 0;
        margin-bottom: 50px;
    }

    .blog-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 30px;
        border: none;
    }

        .blog-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(111, 78, 55, 0.3);
        }

    .blog-card-image {
        height: 250px;
        background: linear-gradient(45deg, #a97458, #6f4e37);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .blog-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #4b2e1a;
        margin-bottom: 15px;
        line-height: 1.4;
    }

    .blog-meta {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 15px;
        font-size: 0.9rem;
        color: #7b5e57;
    }

        .blog-meta i {
            margin-right: 5px;
            color: #a97458;
        }

    .blog-excerpt {
        color: #5c4033;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .blog-tag {
        background: #d7ccc8;
        color: #4b2e1a;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .blog-tag:hover {
            background: #6f4e37;
            color: white;
            text-decoration: none;
        }

    .sidebar-widget {
        background: white;
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 30px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }

    .sidebar-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #4b2e1a;
        margin-bottom: 20px;
        position: relative;
        padding-bottom: 10px;
    }

        .sidebar-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: #a97458;
            border-radius: 2px;
        }

    .recent-post-image {
        width: 80px;
        height: 60px;
        background: linear-gradient(45deg, #6f4e37, #a97458);
        border-radius: 8px;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
    }

    .no-blogs-icon {
        font-size: 4rem;
        color: #a1887f;
        margin-bottom: 20px;
    }

    .blog-stats {
        background: linear-gradient(135deg, #6f4e37 0%, #4b2e1a 100%);
        color: white;
        padding: 20px;
        border-radius: 15px;
        text-align: center;
        margin-bottom: 30px;
    }

    .share-btn.facebook,
.share-btn.twitter,
.share-btn.linkedin,
.share-btn.whatsapp {
    transition: all 0.3s ease;
}

.share-btn.facebook:hover,
.share-btn.twitter:hover,
.share-btn.linkedin:hover,
.share-btn.whatsapp:hover {
    background: #e74c3c; /* 🔴 red hover */
    color: #fff;
}



    .blog-stats {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        border-radius: 15px;
        text-align: center;
        margin-bottom: 30px;
    }

    .stats-number {
        font-size: 2rem;
        font-weight: 700;
        display: block;
    }

    .stats-label {
        font-size: 0.9rem;
        opacity: 0.9;
    }
</style>

<!-- Blog Hero Section -->
<div class="blog-hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 font-weight-bold mb-4">FoodSync Blog</h1>
                <p class="lead mb-0">Discover amazing recipes, food tips, and culinary stories from Bangladesh and beyond</p>
            </div>
        </div>
    </div>
</div>

<!-- Main Container -->
<main id="main-container" class="main-container">
    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-4 order-lg-2">
                <div class="sidebar" style="background-color:#8b4513; color:#fff; border-radius:15px; padding:20px;>
                    <!-- Blog Stats -->
                    <div class="blog-stats" >
                        <span class="stats-number">@(Model?.Count ?? 0)</span>
                        <span class="stats-label">Blog Posts Published</span>
                    </div>

                    <!-- Recent Posts Widget -->
                    <div class="sidebar-widget">
                        <h5 class="sidebar-title">Recent Posts</h5>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var recentBlog in Model.OrderByDescending(b => b.BlogDate).Take(5))
                            {
                                <div class="recent-post-item">
                                    <div class="recent-post-image">
                                        <i class="fas fa-utensils"></i>
                                    </div>
                                    <div class="recent-post-content">
                                        <h6>@recentBlog.BlogTitle</h6>
                                        <div class="recent-post-date">
                                            <i class="fas fa-calendar-alt"></i> @recentBlog.BlogDate?.ToString("MMM dd, yyyy")
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No recent posts available</p>
                        }
                    </div>

                    <!-- Categories Widget -->
                    <div class="sidebar-widget">
                        <h5 class="sidebar-title">Categories</h5>
                        <div class="blog-tags">
                            <a href="#" class="blog-tag">Recipes</a>
                            <a href="#" class="blog-tag">Health Tips</a>
                            <a href="#" class="blog-tag">Restaurant Stories</a>
                            <a href="#" class="blog-tag">Bengali Cuisine</a>
                            <a href="#" class="blog-tag">Seasonal Foods</a>
                            <a href="#" class="blog-tag">Cooking Tips</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-8 order-lg-1">
                <div class="blog-content">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var blog in Model.OrderByDescending(b => b.BlogDate))
                        {
                            <article class="blog-card">
                                <div class="blog-card-image">
                                    <i class="fas fa-utensils" style="font-size: 3rem; color: white; z-index: 1;"></i>
                                </div>
                                <div class="blog-card-content">
                                    <h2 class="blog-title">@blog.BlogTitle</h2>

                                    <div class="blog-meta">
                                        <span><i class="fas fa-user"></i> @blog.BlogAutherName</span>
                                        <span><i class="fas fa-calendar-alt"></i> @blog.BlogDate?.ToString("MMMM dd, yyyy")</span>
                                        <span><i class="fas fa-clock"></i> @blog.BlogDate?.ToString("hh:mm tt")</span>
                                    </div>

                                    <div class="blog-tags">
                                        <a href="#" class="blog-tag">Food</a>
                                        <a href="#" class="blog-tag">Recipe</a>
                                        <a href="#" class="blog-tag">Bangladesh</a>
                                    </div>

                                    <div class="blog-excerpt">
                                        @{
                                            var excerpt = blog.BlogDescription?.Length > 300 ?
                                                blog.BlogDescription.Substring(0, 300) + "..." :
                                                blog.BlogDescription;
                                        }
                                        @Html.Raw(excerpt?.Replace("\n", "<br>"))
                                    </div>

                                    <!-- Social Share Buttons -->
                                    <div class="share-buttons">
                                        <a href="#" class="share-btn facebook" title="Share on Facebook">
                                            <i class="fab fa-facebook-f"></i>
                                        </a>
                                        <a href="#" class="share-btn twitter" title="Share on Twitter">
                                            <i class="fab fa-twitter"></i>
                                        </a>
                                        <a href="#" class="share-btn linkedin" title="Share on LinkedIn">
                                            <i class="fab fa-linkedin-in"></i>
                                        </a>
                                        <a href="#" class="share-btn whatsapp" title="Share on WhatsApp">
                                            <i class="fab fa-whatsapp"></i>
                                        </a>
                                    </div>
                                </div>
                            </article>
                        }
                    }
                    else
                    {
                        <div class="no-blogs-message">
                            <div class="no-blogs-icon">
                                <i class="fas fa-edit"></i>
                            </div>
                            <h3 style="color: #2c3e50; margin-bottom: 15px;">No Blog Posts Yet</h3>
                            <p style="color: #7f8c8d; font-size: 1.1rem;">We're working on some amazing food content for you. Check back soon for delicious recipes, food tips, and culinary stories!</p>
                            <div style="margin-top: 30px;">
                                <a href="/Products/Index" class="btn btn-primary btn-lg" style="background: #e74c3c; border: none; padding: 12px 30px; border-radius: 25px;">
                                    <i class="fas fa-utensils"></i> Explore Our Menu
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Custom JavaScript -->
<script>
    $(document).ready(function () {
        // Smooth scroll for anchor links
        $('a[href^="#"]').on('click', function (event) {
            var target = $(this.getAttribute('href'));
            if (target.length) {
                event.preventDefault();
                $('html, body').stop().animate({
                    scrollTop: target.offset().top - 100
                }, 1000);
            }
        });

        // Social sharing functionality
        $('.share-btn.facebook').on('click', function (e) {
            e.preventDefault();
            var url = encodeURIComponent(window.location.href);
            var title = encodeURIComponent(document.title);
            window.open('https://www.facebook.com/sharer/sharer.php?u=' + url, 'facebook-share', 'width=580,height=296');
        });

        $('.share-btn.twitter').on('click', function (e) {
            e.preventDefault();
            var url = encodeURIComponent(window.location.href);
            var title = encodeURIComponent(document.title);
            window.open('https://twitter.com/intent/tweet?url=' + url + '&text=' + title, 'twitter-share', 'width=580,height=296');
        });

        $('.share-btn.linkedin').on('click', function (e) {
            e.preventDefault();
            var url = encodeURIComponent(window.location.href);
            window.open('https://www.linkedin.com/sharing/share-offsite/?url=' + url, 'linkedin-share', 'width=580,height=296');
        });

        $('.share-btn.whatsapp').on('click', function (e) {
            e.preventDefault();
            var url = encodeURIComponent(window.location.href);
            var title = encodeURIComponent(document.title);
            window.open('https://wa.me/?text=' + title + ' ' + url, 'whatsapp-share');
        });

        // Add animation on scroll
        $(window).scroll(function () {
            $('.blog-card').each(function () {
                var elementTop = $(this).offset().top;
                var elementBottom = elementTop + $(this).outerHeight();
                var viewportTop = $(window).scrollTop();
                var viewportBottom = viewportTop + $(window).height();

                if (elementBottom > viewportTop && elementTop < viewportBottom) {
                    $(this).addClass('animate-in');
                }
            });
        });
    });
</script>
