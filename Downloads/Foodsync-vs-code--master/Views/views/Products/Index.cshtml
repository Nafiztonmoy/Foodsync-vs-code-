@model IEnumerable<FoodWeb.Models.Products>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/@item.ProductPicture"
                         class="card-img-top"
                         alt="@item.ProductName"
                         style="height:200px; object-fit:cover;" />

                    <div class="card-body text-center">
                        <h5 class="card-title">@item.ProductName</h5>
                        <p class="card-text text-muted">@item.ProductPrice TK</p>

                        @if (item.Stock > 0)
                        {
                            <a href="@Url.Action("addToCart", "Products", new { id = item.id })"
                               class=" btn btn--box btn--medium btn--radius btn btn-success btn-sm">Add to Cart</a>
                        }
                        else
                        {
                            <span class="badge bg-danger">Out of Stock</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
